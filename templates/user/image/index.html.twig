{% extends 'base.html.twig' %}

{% block title %}Vos photos:{% endblock %}

{% block body %}
    <h1 class="title"> Les photos :</h1>
    <div class="container">
        <p class="text-card">Les photos de votre enfant:</p>
        <div class="row justify-content-center">
            <div class="col-md-10">
                {% if app.user %}
                    <div class="row mt-3 mb-3">
                    {% for image in app.user.images %}                   
                        <a href="{{ asset('/uploads/'~image.url) }}" data-toggle="lightbox" data-gallery="example-gallery" 
                        class="col-sm-4" style="width:1200px;">
                            <img src="{{ asset('/uploads/'~image.url) }}" alt="image1" class="img-fluid mr-3 mt-3" style="width:300px;">
                        </a>
                    {% endfor %}
                    </div>
            {% else %}
                <p>pas le droit</p>
            {% endif %}     
            </div>
        </div>
    </div>
{% endblock %}