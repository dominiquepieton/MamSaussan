{% extends 'base.html.twig' %}

{% block title %} {{ article.title }} {% endblock %}

{% block body %}
    <div class="container">
        <div class="card my-5">
            <div class="card-body">
                <h2 class="title-5 text-center text-uppercase">{{article.title}}</h2>
            </div>
            {% for image in article.imgArticles %}
                <img src="{{ asset('/uploads/'~image.url) }}" alt="" width="100%" height="200">
            {% endfor %} 
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-lg-10 col-sx-12 col-sm-12 text-card text-justify">
                <p>{{ article.content | raw }}</p>
                <a href="{{path('article_index')}}" class="btn btn-link">
                    <i class="fas fa-arrow-circle-left"></i>
                        Retour Ã  la page article
                </a>
            </div>
            
            <div class="col-md-2 col-lg-2 col-sx-12 col-sm-12 border-left list">
                <h5 class="text-card">Les articles :</h5>
                <ul class="list-unstyled">
                {% for articles in articles %}
                    <li><a href="{{path('article_show', {'slug': articles.slug})}}">{{ articles.title }}</a></li>
                {% endfor %}
                </ul>
            </div>
        </div>
    </div>


{% endblock %}